<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/primary_button_corner_radius</item>
        <item name="android:height">@dimen/primary_button_height</item>
        <item name="android:minHeight">@dimen/primary_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/text_button_height</item>
        <item name="cornerRadius">@dimen/text_button_corner_radius</item>
    </style>

    <style name="PrimaryCard">
        <item name="android:padding">@dimen/primary_card_padding</item>
        <item name="android:background">@drawable/bg_primary_card</item>
        <item name="android:elevation">@dimen/primary_card_elevation</item>
    </style>

    <style name="PrimaryCardTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/gray_500</item>
        <item name="contentInsetStart">@dimen/default_fragment_margin</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="itemIconTint">@color/color_bottom_nav_icon</item>
        <item name="itemTextColor">@color/color_bottom_nav_icon</item>
        <item name="android:background">@drawable/background_bottom_navigation</item>
    </style>
</resources>