<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Credential list item -->
    <style name="CredentialCardStyle">
        <item name="android:minHeight">@dimen/credential_item_min_height</item>
        <item name="android:padding">@dimen/credential_item_padding</item>
        <item name="android:background">@drawable/background_credential_item</item>
        <item name="android:foreground">@drawable/foreground_credential_item</item>
        <item name="android:elevation">@dimen/credential_item_elevation</item>
    </style>

    <style name="CredentialCardExpiration">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- No credentials stub -->
    <style name="NoCredentialsText">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- For credentials not supported by the app -->
    <style name="UnknownCredentialCardStyle" parent="CredentialCardStyle">
        <item name="android:background">@drawable/background_uknown_credential_item</item>
    </style>

    <style name="UnknownCredentialCardExplanation">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Credential field on credential details fragment -->
    <style name="CredentialFieldType">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CredentialFieldValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>


    <style name="CredentialCardTitle">
        <item name="android:lines">2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CredentialCardStatusLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CredentialCardId">
        <item name="android:ellipsize">middle</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/credential_item_id_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/credential_item_id_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/credential_item_id_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/credential_item_id_padding_vertical</item>
        <item name="android:background">@drawable/background_credential_item_id</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    // Styles for available credentials
    <style name="AvailableCredentialCardStyle">
        <item name="android:padding">@dimen/credential_item_padding</item>
        <item name="android:background">@drawable/background_available_credential</item>
        <item name="android:elevation">@dimen/credential_item_elevation</item>
    </style>

    <style name="AvailableCredentialCardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AvailableCredentialCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AvailableCredentialCardIssuer">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

</resources>