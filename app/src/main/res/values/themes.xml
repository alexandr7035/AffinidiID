<resources>
    <!-- Base application theme. -->
    <style name="Theme.AffinidiID" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_400</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_10</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavIconStyle</item>

        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackBarTextStyle</item>
    </style>

    <style name="PrimaryCardStyle">
        <item name="android:background">@drawable/background_card</item>
        <item name="android:padding">@dimen/primary_card_padding</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="CardHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CopiabledField">
        <item name="android:background">@drawable/background_copied_field</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="UserNameField" parent="CopiabledField">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="DidField" parent="CopiabledField">
        <item name="android:maxLines">7</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/black_transp_10</item>
    </style>

    <style name="ToolbarWithBackNav" parent="Toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="navigationIconTint">@color/gray_500</item>
    </style>

    <style name="ToolbarWhiteText">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="contentInsetStart">@dimen/default_fragment_margin</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearanceWhiteText</item>
    </style>

    <style name="ToolbarWithBackNavWhiteText" parent="ToolbarWhiteText">
        <item name="background">@android:color/transparent</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="ToolbarNavIconStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/gray_500</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTextAppearanceWhiteText">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="goToSignUpText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewExplanation">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="BottomDialogBackground">
        <item name="android:background">@drawable/background_bottom_dialog</item>
    </style>

    <style name="PrimaryMenuItem">
        <item name="android:background">@drawable/background_primary_menu_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/primary_menu_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/primary_menu_item_padding_vertical</item>
        <item name="android:paddingStart">@dimen/primary_menu_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/primary_menu_item_padding_horizontal</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AppVersionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>


    <style name="ErrorViewTitle">
        <item name="android:textSize">@dimen/error_view_tile_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ErrorViewText">
        <item name="android:textSize">@dimen/error_view_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AvailableCredentialCardStyle">
        <item name="android:padding">@dimen/credential_item_padding</item>
        <item name="android:background">@drawable/background_available_credential</item>
        <item name="android:elevation">@dimen/credential_item_elevation</item>
    </style>

    <style name="AvailableCredentialCardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AvailableCredentialCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AvailableCredentialCardIssuer">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="CredentialDetailsFieldType">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_200</item>
    </style>

    <style name="CredentialDetailFieldValue">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="SnackBarStyle">
        <item name="android:layout_margin">@dimen/snackbar_margin</item>
    </style>

    <style name="SnackBarTextStyle">
        <item name="android:textSize">@dimen/snackbar_text</item>
        <item name="android:paddingStart">@dimen/snackbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/snackbar_padding_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="JSONScrollViewStyle">
        <item name="android:background">@drawable/background_json_view</item>
    </style>

    <style name="JSONTextStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">16sp</item>
        <item name="android:scrollbars">vertical|horizontal</item>
    </style>

</resources>