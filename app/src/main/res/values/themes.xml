<resources>
    <!-- Base application theme. -->
    <style name="Theme.AffinidiID" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/purple_500</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavIconStyle</item>
    </style>

    <style name="PrimaryCardStyle">
        <item name="android:background">@drawable/background_card</item>
        <item name="android:padding">@dimen/primary_card_padding</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AuthFieldLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/auth_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/auth_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/auth_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/auth_field_corner_radius</item>
    </style>

    <style name="AuthFieldPasswordLayoutStyle" parent="AuthFieldLayoutStyle">
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="AuthFieldEditTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AuthLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorAuthLabel" parent="AuthLabel">
        <item name="android:textColor">@color/purple_300</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/primary_button_corner_radius</item>
        <item name="android:height">@dimen/primary_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ErrorButton" parent="PrimaryButton">
        <item name="backgroundTint">@color/purple_300</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/text_button_height</item>
        <item name="cornerRadius">@dimen/text_button_corner_radius</item>
    </style>

    <!--    Elevation to show the view on the top of views with elevation
            Clickable to prevent clicks on views below -->
    <style name="ProgressFrameLayout">
        <item name="android:background">#70FFFFFF</item>
        <item name="android:elevation">@dimen/primary_card_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/purple_500</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">@dimen/primary_card_elevation</item>
    </style>

    <style name="CardHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CopiabledField">
        <item name="android:background">@drawable/background_copied_field</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="UserNameField" parent="CopiabledField">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="DidField" parent="CopiabledField">
        <item name="android:maxLines">7</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="itemIconTint">@color/color_bottom_nav_icon</item>
        <item name="itemTextColor">@color/color_bottom_nav_icon</item>
        <item name="android:background">@drawable/background_bottom_navigation</item>
    </style>

    <style name="Toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/gray_500</item>
        <item name="contentInsetStart">@dimen/default_fragment_margin</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarWithBackNav" parent="Toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="navigationIconTint">@color/gray_500</item>
    </style>

    <style name="ToolbarWhiteText">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="contentInsetStart">@dimen/default_fragment_margin</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearanceWhiteText</item>
    </style>

    <style name="ToolbarWithBackNavWhiteText" parent="ToolbarWhiteText">
        <item name="background">@android:color/transparent</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="ToolbarNavIconStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/gray_500</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTextAppearanceWhiteText">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="goToSignUpText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewExplanation">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="BottomDialogBackground">
        <item name="android:background">@drawable/background_bottom_dialog</item>
    </style>

    <style name="PrimaryMenuItem">
        <item name="android:background">@drawable/background_primary_menu_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/primary_menu_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/primary_menu_item_padding_vertical</item>
        <item name="android:paddingStart">@dimen/primary_menu_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/primary_menu_item_padding_horizontal</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AppVersionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="CredentialCardStyle">
        <item name="android:minHeight">@dimen/credential_item_min_height</item>
        <item name="android:padding">@dimen/credential_item_padding</item>
        <item name="android:background">@drawable/background_credential_item</item>
        <item name="android:elevation">@dimen/credential_item_elevation</item>
    </style>

    <style name="CredentialCardTitle">
        <item name="android:lines">2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CredentialCardExpiration">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CredentialCardStatusLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CredentialCardId">
        <item name="android:ellipsize">middle</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/credential_item_id_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/credential_item_id_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/credential_item_id_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/credential_item_id_padding_vertical</item>
        <item name="android:background">@drawable/background_credential_item_id</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ErrorViewTitle">
        <item name="android:textSize">@dimen/error_view_tile_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ErrorViewText">
        <item name="android:textSize">@dimen/error_view_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AvailableCredentialCardStyle">
        <item name="android:padding">@dimen/credential_item_padding</item>
        <item name="android:background">@drawable/background_available_credential</item>
        <item name="android:elevation">@dimen/credential_item_elevation</item>
    </style>

    <style name="AvailableCredentialCardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AvailableCredentialCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AvailableCredentialCardIssuer">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>
</resources>