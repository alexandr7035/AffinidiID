<resources>
    <!-- Base application theme. -->
    <style name="Theme.AffinidiID" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_400</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorControlNormal">?attr/colorSecondary</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_10</item>
        <item name="android:navigationBarColor">@color/white</item>

        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavIconStyle</item>

        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackBarTextStyle</item>
    </style>

    <style name="PrimaryCardStyle">
        <item name="android:background">@drawable/background_card</item>
        <item name="android:padding">@dimen/primary_card_padding</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CardHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/black_transp_10</item>
    </style>

    <style name="goToSignUpText">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewExplanation">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="BottomDialogBackground">
        <item name="android:background">@drawable/background_bottom_dialog</item>
    </style>

    <style name="PrimaryMenuItem">
        <item name="android:background">@drawable/background_primary_menu_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/primary_menu_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/primary_menu_item_padding_vertical</item>
        <item name="android:paddingStart">@dimen/primary_menu_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/primary_menu_item_padding_horizontal</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="AppVersionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>


    <style name="ErrorViewTitle">
        <item name="android:textSize">@dimen/error_view_tile_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ErrorViewText">
        <item name="android:textSize">@dimen/error_view_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="JSONScrollViewStyle">
        <item name="android:background">@drawable/background_json_view</item>
    </style>

    <style name="JSONTextStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">16sp</item>
        <item name="android:scrollbars">vertical|horizontal</item>
    </style>

</resources>