<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_fragment_margin"
        android:paddingEnd="@dimen/default_fragment_margin"
        tools:context=".presentation.credential_details.claims.CredentialClaimsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/proofRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusMark"
            tools:itemCount="5"
            tools:listitem="@layout/view_vc_detail_field" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>