<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33777777" />
            <corners android:radius="@dimen/copied_field_corners" />
            <padding android:bottom="@dimen/copied_field_padding" android:top="@dimen/copied_field_padding" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A777777" />
            <corners android:radius="@dimen/copied_field_corners" />
            <padding android:bottom="@dimen/copied_field_padding" android:left="@dimen/copied_field_padding" android:right="@dimen/copied_field_padding" android:top="@dimen/copied_field_padding" />
        </shape>
    </item>
</selector>