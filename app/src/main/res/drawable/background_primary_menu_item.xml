    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/primary_menu_item_corners"/>
            <solid android:color="@color/gray_1"/>
            <stroke android:color="@color/gray_50" android:width="1dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/primary_menu_item_corners"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/gray_50" android:width="1dp"/>
        </shape>
    </item>
</selector>